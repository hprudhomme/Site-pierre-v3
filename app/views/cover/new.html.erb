<h1>New cover</h1>

<%= form_tag url_for(action:'create'), method: "post", multipart: true do %>
            <div class="form-group">
                <%= text_field_tag :title, nil, placeholder: 'Choose a title', class: 'form-control', id: 'new-event-title'%>
            </div>
            <div class="form-group">
                <%= text_field_tag :content, nil, placeholder: 'Write a content', class: 'form-control', id: 'new-event-categorie'%>
            </div>

            <div class="form-group">
                <%= text_field_tag :background, nil, placeholder: 'Choose a background-color', class: 'form-control', id: 'new-event-categorie'%>
            </div>

            <div class="form-group">
                <%= file_field_tag :image %>
            </div>

            <%= submit_tag "Add", class: "btn btn-primary btn-block", id: "submit-event"%>
<% end %>